<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<HBox xmlns:fx="http://javafx.com/fxml/1">
<!-- Hbox 컨테이너 설정 시작 태그 -->

<!-- Ctrl + space를 누르면 intelligence 기능이 나온다.
속성이나 컨트롤 컨테이너 등 
주석 처리하고자 하는 곳을 선택하여 컨트롤 + 시프트 + / 를 누르면
자동 주석 처리가 된다. -->
   <padding>   <!-- 안쪽 여백 설정 -->
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
   
   <spacing>10</spacing> <!-- 컨트롤 간의 간격 설정 -->
   <!-- 내용(컨트롤 추가) -->
   <children>
      <TextField>      <!-- 텍스트 필드 컨트롤 추가 -->
         <prefWidth>200</prefWidth>
      </TextField>
      
      <!-- <Button text = "확인"></Button> -->
      <Button text="확인"> <!-- 버튼 컨트롤 추가 -->
         <text>확인</text>
      </Button>
   </children>
</HBox>
